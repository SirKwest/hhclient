<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/team_textView_style"
        android:paddingVertical="@dimen/dim_19dp"
        android:paddingStart="@dimen/dim_16dp"
        android:paddingEnd="@dimen/dim_8dp"
        android:text="@string/team_title"
        android:textSize="@dimen/text_size_22" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/team_textView_style"
        android:layout_marginTop="@dimen/dim_16dp"
        android:fontFamily="@font/ys_bold"
        android:paddingVertical="@dimen/dim_8dp"
        android:text="@string/team_subtitle"
        android:textSize="@dimen/text_size_32" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/team_textView_style"
        android:text="@string/maksim" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/team_textView_style"
        android:text="@string/yaroslav" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/team_textView_style"
        android:text="@string/constantine" />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/team_textView_style"
        android:text="@string/artem" />

</LinearLayout>
